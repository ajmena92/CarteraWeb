@model WebCartera.Models.tcuenta

@{
    ViewBag.Title = "Borrar Cuenta";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Categorias</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Inicio")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <a href="@Url.Action("Index", "Cuentas")">Cuentas</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Borrar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="ibox ">
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-6 b-r">
                    <h3 class="m-t-none m-b">Cuenta</h3>
                    <p>Esta seguro de eliminar este elemento?</p>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <i class="fa @Model.Imagen fa-2x"></i>
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted form-control">
                                @Html.DisplayFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted form-control">
                                @Html.DisplayFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.SaldoActual, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted form-control">
                                @Model.tmoneda.Simbolo
                                @Html.DisplayFor(model => model.SaldoActual_Format, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Activo, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted form-control">
                                @(Model.Activo ? "Activo" : "Inactivo")
                            </div>
                        </div>
                    </div>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input class="btn btn-danger" type="submit" value="Borrar" />
                                <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Cuentas")';return false;">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>
                <div class="d-none d-sm-block col-sm-6">
                    <h4 class="text-center text-primary">Icono</h4>
                    <p class="text-center align-self-center">
                        <i class="fa @Model.Imagen big-icon "></i>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>




