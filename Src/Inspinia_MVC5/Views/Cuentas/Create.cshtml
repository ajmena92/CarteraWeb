@model WebCartera.Models.tcuenta

@{
    ViewBag.Title = "Crear Cuenta";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Categorias</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Inicio")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <a href="@Url.Action("Index", "Cuentas")">Cuentas</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Crear</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content text-left">
                    <h2>
                        <span class="text-navy">Crear Cuenta</span>

                    </h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationMessage("ModelErr", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id_Usuario)
                        @Html.HiddenFor(model => model.Activo)
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group picker">
                            @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Imagen, new { htmlAttributes = new { @class = "form-control inputpicker", autocomplete = "off" } })
                                    <span id="ImgIcosm" class="btn btn-outline-secondary fa fa-ban"></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.tmoneda.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Id_Moneda", null,"-- Moneda--", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Id_Moneda, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SaldoActual, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SaldoActual, new { htmlAttributes = new { @class = "form-control", @type = "number" } } })
                                @Html.ValidationMessageFor(model => model.SaldoActual, "", new { @class = "text-danger" })
                            </div>
                        </div>                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input class="btn btn-primary" type="submit" value="Guardar" />
                                <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Cuentas")';return false;">Cancelar</button>
                            </div>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Scripts/plugins/iconpicker/css/icos.css")
}
@section scripts{
    @Scripts.Render("~/Scripts/plugins/iconpicker/icos.js")
    @Scripts.Render("~/bundles/jqueryForm")
}

