@using WebCartera.Helpers
@using PagedList.Mvc;
@model IEnumerable<WebCartera.Models.tcategoria>

@{
    ViewBag.Title = "Mantenimiento de Categorias";
    var pagedlist = (PagedList.IPagedList)Model;
}

<div id="replacetarget">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Categorias</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Inicio")">Inicio</a>
                </li>
                <li class="active breadcrumb-item">
                    <strong>Categorias</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>

    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-content text-center p-md">

                        <h2>
                            <span class="text-navy">Lista de Categorias</span>                                                                                  
                        </h2>
                   

                        @using (Html.BeginForm())
                        {

                            <p>
                                <div class="row">
                                    <div class="col-md-12 col-lg-6">
                                        <div class="input-group">
                                            @Html.TextBox("SearchString", null, new { @class = "form-control ", @Placeholder = "Buscar por nombre" })
                                            <div class="input-group-btn">
                                                <button type="submit" class="btn btn-primary">
                                                    Buscar
                                                </button>
                                            </div>
                                        </div>
                                    </div>          
                                    <div class="col-sm-6 col-lg-2 text-sm-center">
                                        <ul class="list-group list-group-item-action">
                                            <li class="list-group-item @(ViewBag.Inactivo == 1 ? "active" : "")">@Html.ActionLink("Ver Inactivos", "Index", new { Inactivo = 1, currentFilter = ViewBag.CurrentFilter })</li>
                                        </ul>
                                    </div>
                                    <div class="col-sm-6 col-lg-4  text-md-right text-sm-center">
                                        <ul class="list-group list-group-horizontal  text-md-right text-sm-center">
                                            <li class="list-group-item @(ViewBag.sortType == 1 ? "active" : "")">@Html.ActionLink("Ingresos", "Index", new { sortType = 1, currentFilter = ViewBag.CurrentFilter , Inactivo= ViewBag.Inactivo })</li>
                                            <li class="list-group-item @(ViewBag.sortType == 0 ? "active" : "") ">@Html.ActionLink("Ambos", "Index", new { sortType = 0, currentFilter = ViewBag.CurrentFilter, Inactivo = ViewBag.Inactivo })</li>
                                            <li class="list-group-item @(ViewBag.sortType == 2 ? "active" : "") ">@Html.ActionLink("Gastos", "Index", new { sortType = 2, currentFilter = ViewBag.CurrentFilter, Inactivo = ViewBag.Inactivo })</li>
                                        </ul>
                                    </div>
                                </div>

                            </p>
                        }

                        <div class="table-responsive animated fadeIn">
                            <table class="table table-hover">
                                <thead>
                                    <tr>

                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Imagen)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Tipo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Activo)                                            
                                        </th>
                                        <th>
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Nuevo", "Create", "Categorias", htmlAttributes: new { @class = "btn btn-secondary pull-right" })
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fa @item.Imagen  fa-2x @(item.Tipo !=1 ?"text-danger": "text-info") " aria-hidden="true"></i>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @(item.Tipo != 1 ? "GASTO" : "INGRESO")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Activo)
                                            </td>
                                            <td>
                                                <div class="pull-right">
                                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span> ", "Editar", "Edit", "Categorias", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-outline-secondary btn-sm" })
                                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "Categorias", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-outline-secondary btn-sm" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        Pagina @(pagedlist.PageCount < pagedlist.PageNumber ? 0 : pagedlist.PageNumber) de @pagedlist.PageCount
                        @Html.PagedListPager(pagedlist, page => Url.Action("Index",
                                            new { page, sortType = ViewBag.sortType, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, Inactivo = ViewBag.Inactivo }))


                    </div>
                </div>


            </div>
        </div>
    </div>
</div>    