@model WebCartera.Models.tcategoria

@{
    ViewBag.Title = "Delete";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Categorias</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Inicio")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <a href="@Url.Action("Index", "Categorias")">Categorias</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Borrar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="ibox ">
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-6 b-r">
                    <h3 class="m-t-none m-b">Categoria</h3>
                    <p>Esta seguro de eliminar este elemento?</p>

                    <div class="form-group ">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted">
                                @Html.DisplayFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <i class="fa @Model.Imagen fa-2x @(Model.Tipo !=1 ?"text-danger": "text-info") "></i>
                        </div>
                    </div>
                    <div class="form-group picker">
                        @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="bg-muted"> @(Model.Tipo != 1 ? "GASTO" : "INGRESO")</div>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Activo, htmlAttributes: new { @class = "control-label col-md-2 font-bold" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.DisplayFor(model => model.Activo)
                            </div>
                        </div>
                    </div>

                    
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input class="btn btn-danger" type="submit" value="Borrar" />
                                <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Categorias")';return false;">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>
                <div class="d-none d-sm-block col-sm-6">
                    <h4 class="text-center text-primary">Icono</h4>
                    <p class="text-center align-self-center">
                        <i class="fa @Model.Imagen big-icon @(Model.Tipo !=1 ?"text-danger": "text-info") "></i>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

              
