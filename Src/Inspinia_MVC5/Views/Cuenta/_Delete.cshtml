            @Html.DisplayFor(model => model.Activo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SeguridadRole.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeguridadRole.Descripcion)
        </dd>

    </dl>
</div>
