@using WebCartera.Helpers
@model WebCartera.Models.seguridadusuario

@{
    ViewBag.Title = "Mantenimiento de Usuario";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Seguridad</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Inicio")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Mi Cuenta</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Información</h5>
            </div>
            <div class="ibox-content">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.NomUsuario)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NomUsuario)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IdRol)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.seguridadrol.Descripcion)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Activo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Activo)
                    </dd>



                </dl>
                <div class="hr-line-dashed"></div>
                <div class="form-group row ">
                    <div class="col-sm-4 col-sm-offset-2 text-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "Cuenta", routeValues: new { id = Model.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary btn-lg" })
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "Cuenta", routeValues: new { id = Model.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/Pages/ActivaModal.js")
}